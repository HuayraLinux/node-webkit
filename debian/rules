#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

DEB_DH_SHLIBDEPS_ARGS_ALL=--dpkg-shlibdeps-params=--ignore-missing-info
# This has to be exported to make some magic below work.
export DH_OPTIONS
export DEB_DH_SHLIBDEPS_ARGS_ALL


%:
	dh $@ 

override_dh_install:
	mkdir debian/tmp
ifeq ($(ARCH), i386)
	cd packages; tar xzf node-webkit-v0.7.5-linux-ia32.tar.gz
	mv packages/node-webkit-v0.7.5-linux-ia32 debian/tmp/node-webkit
else
	cd packages; tar xzf node-webkit-v0.7.5-linux-x64.tar.gz
	mv packages/node-webkit-v0.7.5-linux-x64 debian/tmp/node-webkit
endif
	dh_install

override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info
